<div class="account-page wrapper wrapper--xxs">

  <div class="account-inner">
    {% form 'reset_customer_password' %}

      <h1 class="text-center">{{ 'customer.reset_password.title' | t }}</h1>

      <p class="text-center note">{{ 'customer.reset_password.subtext' | t: email: email }}</p>

      {{ form.errors | default_errors }}

      <input required placeholder="{{ 'customer.reset_password.password' | t }}" type="password" value="" name="customer[password]" id="ResetPassword" class="{% if form.errors contains 'password' %} input--error{% endif %}">

      <input required placeholder="{{ 'customer.reset_password.password_confirm' | t }}" type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="{% if form.errors contains 'password_confirmation' %} input--error{% endif %}">
      
      <footer class="form-footer">
        <button type="submit" class="btn">
          <span>{{ 'customer.reset_password.submit' | t }}</span>
        </button>
      </footer>

    {% endform %}

  </div>

</div>